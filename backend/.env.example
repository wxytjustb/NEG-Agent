# 应用基础配置
APP_NAME=Agent API
APP_VERSION=1.0.0
DEBUG=True

# 服务器配置
HOST=127.0.0.1
PORT=8000

# 数据库配置
DATABASE_URL=sqlite:///./app.db

# JWT 安全配置
SECRET_KEY=your-secret-key-change-in-production-please-use-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS 配置（多个来源用逗号分隔）
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# LLM API 配置
LLM_API_KEY=your-llm-api-key-here
LLM_API_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-3.5-turbo

# ollama API 配置
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=your-ollama-model-here
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=300

# Session Token Configuration
SESSION_TOKEN_EXPIRE_MINUTES=30

# Laminar Setting
LAMINAR_API_KEY=xxxx-your-self-hosted-key-xxxx  # Laminar 自托管服务器地址（你的服务器 IP）\r
LAMINAR_BASE_URL=http://你的服务器IP             # Laminar HTTP 端口（你在 .env 里设的）\r
LAMINAR_HTTP_PORT=8080                          # Laminar gRPC 端口（你在 .env 里设的）
LAMINAR_GRPC_PORT=8081                          # Laminar 自托管服务器地址（你的服务器 IP）\r
LAMINAR_ENABLED=True                            # 是否启用 Laminar\r
LAMINAR_ENVIRONMENT=development                 # 环境名称（可选）

# Chroma 配置（向量数据库）
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_USE_HTTP=True  # 是否使用 HTTP 客户端（True=远程服务器，False=本地持久化）
CHROMADB_COLLECTION=memory  # 对话记忆集合名称
CHROMADB_DISTANCE_METRIC=cosine  # 距离度量方式（cosine/l2/ip）

# ============================================
# 历史记忆配置
# ============================================
HISTORY_MESSAGE_LIMIT=10  # 获取最近N条历史消息，默认10条

# ============================================
# 意图识别配置（DeepSeek LLM）
# ============================================
# 意图标签定义（逗号分隔）
INTENT_LABELS=日常对话,法律咨询,情感倾诉

# 意图置信度阈值（0-1），低于此值归为日常对话
INTENT_MIN_CONFIDENCE=0.3

# ============================================
# ModelScope API 配置（用于意图识别）
# ============================================
# ModelScope API Base URL
# 注意：不同的模型部署实例有不同的 Base URL
MODELSCOPE_API_BASE_URL=https://ms-ens-aeba8b2a-0afa.api-inference.modelscope.cn/v1

# ModelScope API Key (Token)
MODELSCOPE_API_KEY=ms-c9aa7006-52df-4234-83b6-8ac568205aa0

# ModelScope Model ID
# 建议模型：Qwen/Qwen3-0.6B (轻量快速) 或 Qwen/Qwen2.5-1.5B-Instruct (更准确)
MODELSCOPE_MODEL=Qwen/Qwen3-0.6B