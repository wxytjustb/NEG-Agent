# 应用基础配置
APP_NAME=Agent API
APP_VERSION=1.0.0
DEBUG=True

# 服务器配置
HOST=127.0.0.1
PORT=8000

# 数据库配置
DATABASE_URL=sqlite:///./app.db

# JWT 安全配置
SECRET_KEY=your-secret-key-change-in-production-please-use-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS 配置（多个来源用逗号分隔）
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# LLM API 配置
LLM_API_KEY=your-llm-api-key-here
LLM_API_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-3.5-turbo

# ollama API 配置
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=your-ollama-model-here
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=300

# Session Token Configuration
SESSION_TOKEN_EXPIRE_MINUTES=30

# Laminar Setting
LAMINAR_API_KEY=xxxx-your-self-hosted-key-xxxx  # Laminar 自托管服务器地址（你的服务器 IP）\r
LAMINAR_BASE_URL=http://你的服务器IP             # Laminar HTTP 端口（你在 .env 里设的）\r
LAMINAR_HTTP_PORT=8080                          # Laminar gRPC 端口（你在 .env 里设的）
LAMINAR_GRPC_PORT=8081                          # Laminar 自托管服务器地址（你的服务器 IP）\r
LAMINAR_ENABLED=True                            # 是否启用 Laminar\r
LAMINAR_ENVIRONMENT=development                 # 环境名称（可选）

# Chroma Setting (向量数据库配置)
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_USE_HTTP=true  # 是否使用 HTTP 客户端（true=远程服务器，false=本地持久化）
CHROMA_PERSIST_DIRECTORY=./chroma_data  # 本地持久化目录（仅 use_http=false 时生效）
CHROMADB_COLLECTION=short_term_memory  # 短期记忆集合名称
CHROMADB_DISTANCE_METRIC=cosine
# 距离度量方式（Distance Metric）
# - cosine: 余弦相似度，适合文本语义搜索（推荐）。忽略向量长度，只关注语义方向，范围 [0, 2]
# - l2: L2 欧几里得距离，通用场景。考虑向量长度和方向，适合需要精确匹配的场景
# - ip: 内积（Inner Product），适合推荐系统。考虑向量模长和夹角

# ============================================
# LangGraph 配置（工作流编排）
# ============================================
# 是否启用 LangGraph
LANGGRAPH_ENABLED=True

# 最大迭代次数
LANGGRAPH_MAX_ITERATIONS=10

# 超时时间（秒）
LANGGRAPH_TIMEOUT=300

# 是否启用追踪
LANGGRAPH_TRACING_ENABLED=True

# 详细日志
LANGGRAPH_VERBOSE=True

# 检查点配置
LANGGRAPH_CHECKPOINT_ENABLED=False
LANGGRAPH_CHECKPOINT_BACKEND=memory

