# 应用基础配置
APP_NAME=Agent API
APP_VERSION=1.0.0
DEBUG=True

# 服务器配置
HOST=127.0.0.1
PORT=8000

# 数据库配置
DATABASE_URL=sqlite:///./app.db

# JWT 安全配置
SECRET_KEY=your-secret-key-change-in-production-please-use-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS 配置（多个来源用逗号分隔）
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# LLM API 配置
LLM_API_KEY=your-llm-api-key-here
LLM_API_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-3.5-turbo

# ollama API 配置
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=your-ollama-model-here
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=300

# Test Access Token (for development/testing only)
# This token is used in automated tests to verify Golang Server integration
# Replace with your actual test token from Golang Server
TEST_ACCESS_TOKEN=xxx
